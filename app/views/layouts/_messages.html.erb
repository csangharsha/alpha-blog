<div class=col-sm-12">
  <% flash.each do |name, msg| %>
    <div class="row offset-sm-3 col-sm-6 alert alert-<%=name%> alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>
