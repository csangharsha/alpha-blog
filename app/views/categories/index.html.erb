<h1 align="center"  class="mb-4">All Alpha Category</h1>

<div class="d-flex justify-content-center">
  <%= will_paginate @categories %>
</div>
<div align="center">
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="card text-dark bg-light mb-3 col-md-4 offset-md-4" style="max-width: 25rem; padding-left: 0; padding-right: 0;">
          <div class="card-body">
            <li><strong><%= link_to category.name, category_path(category) %></strong></li>
            <li><small><%=pluralize(category.articles.count, 'article')%></small></li>
          </div>
          <% if logged_in? && current_user.admin? %>
          <div class="card-footer">
            <%= link_to 'Edit this Category', edit_category_path(category)%>
          </div>
          <% end %>
        </div>
    </ul>
  <% end %>
</div>

<div class="d-flex justify-content-center">
  <%= will_paginate @categories %>
</div>